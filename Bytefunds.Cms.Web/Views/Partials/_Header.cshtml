@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var rootweb = Model.Content.Ancestor(1);
    string email = rootweb.GetPropertyValue<string>("email");
    string tel = rootweb.GetPropertyValue<string>("tel");
    int logoid = rootweb.GetPropertyValue<int>("logo");
    IPublishedContent logo = Umbraco.Media(logoid);

    string url = Model.Content.Name != "Home" ? "/" : "";

    IPublishedContent wechat = Umbraco.Media(1261);
    IPublishedContent code = Umbraco.Media(1262);

}
<div class="header-container">
    <div class="header-top dark ">
        <div class="container">
            <div class="row">
                <div class="col-xs-3 col-sm-8 col-md-9">
                    <!-- header-top-first start -->
                    <!-- ================ -->
                    <div class="header-top-first clearfix">
                        <div class="social-links hidden-lg hidden-md hidden-sm small">
                            <div class="btn-group dropdown">
                                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown"><i class="fa fa-share-alt"></i></button>
                                <ul class="dropdown-menu dropdown-animation">
                                    <li class="twitter"><i class="fa fa-phone pr-10 pl-5"></i>服务热线：028-8505-7407</li>
                                    <li class="twitter"><i class="fa pr-10 pl-10">（工作日10:00-18:00）</i></li>
                                </ul>
                            </div>
                        </div>
                        <ul class="list-inline hidden-md hidden-lg hidden-sm top-service" style="position: absolute;top:0;left: 60px;">
                            <li class=""><a href="" class="wechat"><i class="fa fa-wechat"></i></a></li>
                        </ul>
                        <ul class="list-inline hidden-xs top-service">
                            <li class="twitter"><i class="fa fa-phone pr-5 pl-5"></i>服务热线：028-8505-7407（工作日10:00-18:00）</li>
                            <li class="twitter"><a href="#" class="qq"><i class="fa fa-qq"></i></a></li>
                            <li class="twitter"><a href="#" class="wechat"><i class="fa fa-wechat"></i></a></li>
                        </ul>
                    </div>
                    <!-- header-top-first end -->
                </div>
                <div class="col-xs-9 col-sm-4 col-md-3">
                    <!-- header-top-second start -->
                    <!-- ================ -->
                    <div id="header-top-second" class="clearfix">
                        <!-- header top dropdowns start -->
                        <!-- ================ -->
                        <div class="header-top-dropdown text-right">
                            @{
                                if (Members.IsLoggedIn())
                                {
                                    <div class="btn-group">
                                        <a href="/memberinfo" class="btn btn-default btn-sm uesr-btn"><i class="fa fa-user pr-10"></i>用户中心</a>
                                        <ul class="user-center list  hidden">
                                            <li><a href="/memberinfo/buyrecord">投资记录</a></li>
                                            <li><a href="/memberinfo/withdraw">提现申请</a></li>
                                            <li><a href="/memberinfo/withdrawrecord">提现记录</a></li>
                                            <li><a href="/memberinfo/verified">实名认证</a></li>
                                            <li><a href="/memberinfo/bankcertification">绑定银行</a></li>
                                        </ul>
                                    </div>
                                    <div class="btn-group">
                                        <a href="/umbraco/Api/Member/Logout" class="btn btn-default btn-sm logout"><i class="fa fa-sign-out pr-10"></i>退出</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="btn-group">
                                        <a href="/register" class="btn btn-default btn-sm"><i class="fa fa-user pr-10"></i>注册</a>
                                    </div>
                                    <div class="btn-group">
                                        <a href="/login" class="btn btn-default btn-sm"><i class="fa fa-lock pr-10"></i>登录</a>
                                    </div>
                                }
                            }
                        </div>
                        <!--  header top dropdowns end -->
                    </div>
                    <!-- header-top-second end -->
                </div>
            </div>
        </div>
    </div>
    <!-- ================ -->
    <header class="header  fixed   clearfix">
        <div class="container">
            <div class="row">
                <div class="col-xs-7  col-sm-5 col-md-3">
                    <!-- header-left start -->
                    <!-- ================ -->
                    <div class="header-left clearfix">
                        <!-- logo -->
                        <div id="logo" class="logo">
                            <a href="/"><img id="logo_img" src="~/assets/images/logo.png" alt="比特金服"></a>
                        </div>
                    </div>
                    <!-- header-left end -->
                </div>
                <div class="col-xs-5 col-sm-7 col-md-9">
                    <!-- header-right start -->
                    <!-- ================ -->
                    <div class="header-right clearfix">
                        <!-- main-navigation start -->
                        <!-- classes: -->
                        <!-- "onclick": Makes the dropdowns open on click, this the default bootstrap behavior e.g. class="main-navigation onclick" -->
                        <!-- "animated": Enables animations on dropdowns opening e.g. class="main-navigation animated" -->
                        <!-- "with-dropdown-buttons": Mandatory class that adds extra space, to the main navigation, for the search and cart dropdowns -->
                        <!-- ================ -->
                        <div class="main-navigation  animated with-dropdown-buttons">
                            <!-- navbar start -->
                            <!-- ================ -->
                            <nav class="navbar navbar-default" role="navigation">
                                <div class="container-fluid">
                                    <!-- Toggle get grouped for better mobile display -->
                                    <div class="navbar-header">
                                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                                            <span class="sr-only"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>
                                    <!-- Collect the nav links, forms, and other content for toggling -->
                                    <div class="collapse navbar-collapse scrollspy smooth-scroll" id="navbar-collapse-1">
                                        <!-- main-menu -->
                                        <ul class="nav navbar-nav navbar-right">
                                            @{
                                                if (Request.Url.AbsolutePath.Contains("/funds"))
                                                {
                                                    <li class=""><a href="/">我要赚钱</a></li>
                                                    <li class="active"><a href="/funds">量化定期宝产品</a></li>
                                                    <li class=""><a href="/news">新闻动态</a></li>
                                                    <li class=""><a href="/about">关于我们</a></li>
                                                }
                                                else if (Request.Url.AbsolutePath.Contains("/news"))
                                                {
                                                    <li class=""><a href="/">我要赚钱</a></li>
                                                    <li class=""><a href="/funds">量化定期宝产品</a></li>
                                                    <li class="active"><a href="/news">新闻动态</a></li>
                                                    <li class=""><a href="/about">关于我们</a></li>
                                                }
                                                else if (Request.Url.AbsolutePath.Contains("/about"))
                                                {
                                                    <li class=""><a href="/">我要赚钱</a></li>
                                                    <li class=""><a href="/funds">量化定期宝产品</a></li>
                                                    <li class=""><a href="/news">新闻动态</a></li>
                                                    <li class="active"><a href="/about">关于我们</a></li>
                                                }
                                                else if (Request.Url.AbsolutePath == "/")
                                                {
                                                    <li class="active"><a href="/">我要赚钱</a></li>
                                                    <li class=""><a href="/funds">量化定期宝产品</a></li>
                                                    <li class=""><a href="/news">新闻动态</a></li>
                                                    <li class=""><a href="/about">关于我们</a></li>
                                                }
                                                else
                                                {
                                                    <li class=""><a href="/">我要赚钱</a></li>
                                                    <li class=""><a href="/funds">量化定期宝产品</a></li>
                                                    <li class=""><a href="/news">新闻动态</a></li>
                                                    <li class=""><a href="/about">关于我们</a></li>
                                                }
                                            }
                                            @*<li class=""><a href="#">新手指南</a></li>*@
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                            <!-- navbar end -->
                        </div>
                        <!-- main-navigation end -->
                    </div>
                    <!-- header-right end -->
                </div>
            </div>
        </div>

    </header>
    <!-- header end -->
</div>

<div class="modal fade" id="weixinModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="text-align:center">
                <h6 style="text-align:right"><button data-dismiss="modal" style="background-color:transparent;border:none"><i class="fa fa-close"></i></button></h6>
                <h2 class="wechatTitle">@Umbraco.GetDictionaryValue("WeiXinTitle")</h2>
                <img src="@code.Url" alt="code" style="margin:0 auto" />
                <span>@Umbraco.GetDictionaryValue("WeiXinNumber")</span>
            </div>
            <div class="modal-footer">
                <div class="row" style="text-align:left">
                    <div class="col-xs-2">
                        <img style="float:right;" src="@wechat.Url" alt="We chat" />
                    </div>
                    <div class="col-xs-10">
                        <div>
                            <b>@Umbraco.GetDictionaryValue("WeiXinScanning")</b>
                        </div>
                        <div>
                            @Umbraco.GetDictionaryValue("WeiXinStep")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


