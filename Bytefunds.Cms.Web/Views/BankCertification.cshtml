@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
    BankCertificationViewModel bankCertificationViewModel = new BankCertificationViewModel();
    
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

<section class="pv-20 clearfix">
    <div class="container register">
        <div class="row">
            <div class="form-block center-block p-20 light-gray-bg border-clear text-left">
                <h2 class="title">补充银行信息</h2>
                <form class="form-horizontal" role="form" action="/umbraco/Api/Member/BankCertification" method="post">
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => bankCertificationViewModel.BankName, new { @class = "col-sm-3 control-label" })
                        @*<label for="inputUserName" class="col-sm-3 control-label">姓名<span class="text-danger small">*</span></label>*@
                        <div class="col-sm-8">
                            @*<input type="text" class="form-control" id="inputUserName" placeholder="Your Name" required onfocus="$(this).attr('placeholder','')" onblur="$(this).attr('placeholder','Your Name')">*@
                            <div>
                                @Html.TextBoxFor(m => bankCertificationViewModel.BankName, new { @class = "form-control", placeholder = "请输入开户行" })
                                <i class="fa  fa-bank form-control-feedback"></i>
                            </div>
                            @Html.ValidationMessageFor(m => bankCertificationViewModel.BankName)
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => bankCertificationViewModel.BankAccountName, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-8">
                            <div>
                                @Html.TextBoxFor(m => bankCertificationViewModel.BankAccountName, new { @class = "form-control", placeholder = "请输入开户人姓名" })
                                <i class="fa fa-user form-control-feedback"></i>
                            </div>
                            @Html.ValidationMessageFor(m => bankCertificationViewModel.BankAccountName)
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => bankCertificationViewModel.BankCardNumber, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-8">
                            <div>
                                @Html.TextBoxFor(m => bankCertificationViewModel.BankCardNumber, new { @class = "form-control", placeholder = "请输入您的银行卡卡号" })
                                <i class="fa fa-credit-card form-control-feedback"></i>
                            </div>
                            @Html.ValidationMessageFor(m => bankCertificationViewModel.BankCardNumber)
                        </div>
                    </div>
