@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
    VerifiedViewModel verifiedViewModel = new VerifiedViewModel();
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

<section class="clearfix">
    <div class="container sign-up">
        <div class="row">
            <div class="form-block center-block p-20 light-gray-bg border-clear text-left">
                <h2 class="title">补充个人信息</h2>
                <form class="form-horizontal" role="form" action="/umbraco/Api/Member/Verified" method="post" enctype="multipart/form-data">
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => verifiedViewModel.IDCard, new { @class = "col-sm-3 control-label" })
                        @*<label for="inputUserName" class="col-sm-3 control-label">姓名<span class="text-danger small">*</span></label>*@
                        <div class="col-sm-8">
                            @*<input type="text" class="form-control" id="inputUserName" placeholder="Your Name" required onfocus="$(this).attr('placeholder','')" onblur="$(this).attr('placeholder','Your Name')">*@
                            <div>
                                @Html.TextBoxFor(m => verifiedViewModel.IDCard, new { @class = "form-control", placeholder = "请输入身份证号" })
                                <i class="fa fa-user form-control-feedback"></i>
                            </div>
                            @Html.ValidationMessageFor(m => verifiedViewModel.IDCard)
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => verifiedViewModel.Card1, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-8">
                            <div>
                                @Html.TextBoxFor(m => verifiedViewModel.Card1, new { @class = "form-control", placeholder = "请输入您的身份证正面照", type = "file" })
                                <i class="fa fa-credit-card form-control-feedback"></i>
                            </div>
                            @Html.ValidationMessageFor(m => verifiedViewModel.Card1)
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => verifiedViewModel.Card2, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-8">
                            <div>
                                @Html.TextBoxFor(m => verifiedViewModel.Card2, new { @class = "form-control", placeholder = "请输入您的身份证反面照", type = "file" })
                                <i class="fa fa-credit-card form-control-feedback"></i>
                            </div>
                            @Html.ValidationMessageFor(m => verifiedViewModel.Card2)
                        </div>
                    </div>
                    @*<div class="form-group has-feedback">
                            <label for="rePassword" class="col-sm-3 control-label">重复密码<span class="text-danger small">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" id="rePassword" placeholder="Repeat Password" required onfocus="$(this).attr('placeholder','')" onblur="$(this).attr('placeholder','Repeat Password')">
                                <i class="fa fa-lock form-control-feedback"></i>
                            </div>
                        </div>*@
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-8 submit-btn">
                            <button type="submit" class="btn btn-group btn-warning btn-animated">保存<i class="fa fa-check"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>