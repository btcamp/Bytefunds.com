@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
    string str = "0.00", username = str, accumulatedEarnings = str, latestearnings = str, fundAccount = str, assets = str, tel = string.Empty;

    if (!Members.IsLoggedIn())
    {
        <script>
            window.onload = function () {
                location.href = "/login";
            }
        </script>
    }
    else
    {
        IMember member = ApplicationContext.Services.MemberService.GetById(Members.GetCurrentMemberId());
        username = member.Name;
        accumulatedEarnings = member.GetValue<double>("accumulatedEarnings").ToString("f2");
        latestearnings = member.GetValue<double>("latestearnings").ToString("f2");
        fundAccount = member.GetValue<double>("fundAccount").ToString("f2");
        assets = member.GetValue<double>("assets").ToString("f2");
        tel = member.GetValue<string>("tel");
    }
}
<link href="~/assets/css/jimu.css" rel="stylesheet" />
<section class="main-container margin-clear padding-top-clear">
    
    <div class="container" id="user-summary">
        <h3>尊敬的用户：@username</h3>
        <div class="row summary-infos">
            <div class="col-sm-6">
                <div class="summary-info summary-info-p2p">
                    <div class="hd clearfix">
                        <span>P2P账户</span>
                        <a href="">详情</a>
                    </div>
                    <div class="bd clearfix">
                        <div class="field">
                            <strong class="decimal">
                                0.00
                            </strong>
                            <label>累计收益</label>
                        </div>
                        <div class="field">
                            <div class="col-sm-3 col-xs-4 span2">
                                <span class="decimal">
                                    0.00
                                </span>
                                <label>累计投资</label>
                            </div>
                            <div class="col-sm-3 col-xs-4 span2">
                                <span class="decimal">
                                    0.00
                                </span>
                                <label>待收收益</label>
                            </div>
                            <div class="col-sm-3 col-xs-4 span2 last">
                                <span class="decimal">
                                    0.00
                                </span>
                                <label>待收本金</label>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="ft clearfix">
                        <dl>
                            <dt>可用余额</dt>
                            <dd class="decimal">0.00</dd>
                        </dl>
                    </div>
                    <div class="account-unactive">
                        <h4>开通P2P账户，最高可得1000元新手大礼包</h4>
                        <a class="btn btn-primary btn-large" href="">立即开通</a>
                    </div>
                    <div class="summary-split"></div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12">
                <div class="summary-info summary-info-funds">
                    <div class="hd clearfix">
                        <span>基金账户</span>
                    </div>
                    <div class="bd clearfix">
                        <div class="field">
                            <strong class="decimal">@latestearnings</strong><label>最新收益 </label>
                        </div>
                        <div class="field">
                            <div class="col-sm-3 col-xs-6 span2"><span class="decimal">@accumulatedEarnings</span><label>累计收益</label></div>
                            <div class="col-sm-3 col-xs-6 span2 last"><span class="decimal">@fundAccount</span><label>基金账户</label></div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="ft clearfix">
                        <dl>
                            <dt>我的资产</dt>
                            <dd class="decimal">@assets</dd>
                        </dl>
                    </div>
                    <div class="account-unactive">
                        <h4>您还未开通基金账户</h4>
                        <a class="btn btn-large" href="">立即开通</a>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</section>