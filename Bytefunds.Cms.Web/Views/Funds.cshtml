@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "_Layout.cshtml";
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();

    IContentType ct = ApplicationContext.Services.ContentTypeService.GetContentType("ProductElement");
    IEnumerable<IContent> contents = ApplicationContext.Services.ContentService.GetContentOfContentType(ct.Id).Where(c => c.Status != ContentStatus.Trashed).OrderBy(e => e.GetValue<int>("sort"));
}
<div class="etf-bg" data-animation-effect="fadeIn" data-effect-delay="50">
    <img src="/assets/images/banner/banner02.jpg" alt="" style="width:100%;" />
</div>

<!-- section start -->
<!-- ================ -->
<section class="clearfix pv-20 light-gray-bg etf-1">
    <div class="container">
        <div class="row etf">
            <div class="title-left col-md-6">
                <span class="title-1">1</span>
                <h2>不惧震荡，胜者为王</h2>
            </div>
            <div class="title-right col-md-6"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="l_ul">
                    <dl>
                        <dt>目前可能是每位投资者最为苦恼的投资阶段</dt>
                        <dd><i class="fa fa-remove"></i>频频暴跌的股票市场不敢碰</dd>
                        <dd><i class="fa fa-remove"></i>固定收益类产品收益正在下滑</dd>
                        <dd><i class="fa fa-remove"></i>P2P跑路太多也不敢投</dd>
                        <dd class="f_dd">一夜暴富的黄粱美梦被彻底打破 <br />但是生活成本持续走高，压力山大</dd>
                    </dl>
                    <img src="/assets/images/pic.png" alt="" class="" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="fl r_tbl">
                    <p class="txt">应对市场极端情况，有一类产品表现不俗！</p>
                    <table>
                        <tbody>


                            <tr class="f_tr ">
                                <td width="">产品</td>
                                <td width="">产品期限（月）</td>
                                <td width="">年化收益</td>
                                <td>投资</td>
                            </tr>

                            @{

                                foreach (IContent item in contents)
                                {
                                    <tr>
                                        <td><a href="/productdetails?id=@item.Id">@(item.GetValue<string>("title"))</a></td>
                                        <td class="cGreen cBold">@(item.GetValue<string>("cycle"))</td>
                                        <td class="cRed cBold">@(item.GetValue<decimal>("rate").ToString("f2"))%</td>
                                        <td class="cRed cBold"><a href="/pay?id=@item.Id&minAmount=@(item.GetValue<double>("startAmount"))" class="btn  btn-warning">立即购买</a></td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    <img src="/assets/images/ico2.png" alt="" class="hidden-xs">
                </div>
            </div>
        </div>
        <div class="row object-non-visible" data-animation-effect="fadeInDownSmall" data-effect-delay="200">
            <div class="col-md-12">
                <h2 class="h_title">鹏华量化对冲历史业绩</h2>
            </div>
            <div class="col-md-6">
                <div class="owl-carousel content-slider-with-large-controls" style="position: relative;">
                    <div class="overlay-container overlay-visible">
                        <img src="/assets/images/achievement/ach01.jpg" alt="">
                        <div class="overlay-bottom hidden-xs"></div>
                        <a href="/assets/images/achievement/ach01.jpg" class="popup-img overlay-link hidden-xs" title="方正副邦-合生强债（量化部分）"><i class="icon-zoom-in"></i></a>
                    </div>
                    <div class="overlay-container overlay-visible">
                        <img src="/assets/images/achievement/ach02.jpg" alt="">
                        <div class="overlay-bottom hidden-xs"></div>
                        <a href="/assets/images/achievement/ach02.jpg" class="popup-img overlay-link hidden-xs" title="东航金融-自营盘1号"><i class="icon-zoom-in"></i></a>
                    </div>
                    <div class="overlay-container overlay-visible">
                        <img src="/assets/images/achievement/ach03.jpg" alt="">
                        <div class="overlay-bottom hidden-xs"></div>
                        <a href="/assets/images/achievement/ach03.jpg" class="popup-img overlay-link hidden-xs" title="东航金融-小金牛-固收2号"><i class="icon-zoom-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <ul>
                    <li><span class="tdr">最大年化收益率</span><span class="cRed tdl">19.05%</span></li>
                    @*<li><span class="tdr">夏普比率</span><span class="tdl">2.99</span></li>*@
                    <li><span class="tdr">历史最大回撤</span><span class="tdl">1.20%</span></li>
                </ul>
                <p class="indent">东航金融-小金牛-固收2号自成立以来年化收益率为19.05%，在同类基金中表现居前。基金在回撤控制方面表现优异，在去年12月的市场中性“黑天鹅”事件中回撤仅为0.67%。</p>
                <p class="sjly">数据来源：鹏华量化研究中心</p>
            </div>
        </div>
    </div>
</section>
<!-- section end -->
<section class="section default-bg clearfix">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="call-to-action text-center">
                    <div class="row">
                        <div class="col-sm-8">
                            <h1 class="title" style="margin-top:10px;">鹏华资产量化复兴管理计划</h1>
                            <p style="padding-top:10px;font-size:1.1em">收益高，风险小，全胜战绩，历史最大收益 <span style="font-size:1.5em;color:#FFD800;">66.9%</span>，新产品火热预约中, 专业的团队，带您延续昨日的辉煌，你心动了吗？</p>
                            <p></p>
                        </div>
                        <div class="col-sm-4">
                            <br>
                            <p><span class="reservation-btn btn btn-lg btn-gray-transparent btn-animated ">立即预约<i class="fa fa-arrow-right pl-10"></i></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
